{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": "off",
    "no-plusplus": "off",
    "import/no-unresolved": "error",
    "class-methods-use-this": 0,
    "import/prefer-default-export": 0,
    "import/extensions": "error",
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ],
    "no-underscore-dangle": 0,
    "no-useless-escape": "off",
    "no-restricted-syntax": "off",
    "no-console": "off",
    "global-require": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts",
          ".tsx",
          ".d.ts"
        ]
      }
    }
  }
}